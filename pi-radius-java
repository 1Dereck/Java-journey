import java.util.Scanner;

public class Main {
    public static void main (String[] args) {

        Scanner sc = new Scanner(System.in);

        double raio, area, pi, resultRaio;
        pi = 3.14159;

        System.out.println("Digite o raio que realizaremos area = pi * raio ao quadrado");
        raio = sc.nextDouble();

        resultRaio = Math.pow(raio, 2);
        area = pi * resultRaio;

        System.out.printf("Resultado = %.4f%n", area);

    }
}
